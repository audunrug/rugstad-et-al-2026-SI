  shorttitle = {Longleaf Pine Restoration on Hydric Sites},
  author = {Crouch, Connor D. and Knapp, Benjamin O. and Cohen, Susan A. and Glitzenstein, Jeff S. and Walker, Joan L. and Wang, G. Geoff},
  year = {2022},
  journal = {Applied Vegetation Science},
  volume = {25},
