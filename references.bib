@article{shemboClassificationOrdinationAnalysis2024,
  title = {Classification and Ordination Analysis of Wild Medicinal Plants in {{Ada}}'a District, {{Ethiopia}}: {{Implication}} for Sustainable Conservation and Utilization},
  shorttitle = {Classification and Ordination Analysis of Wild Medicinal Plants in {{Ada}}'a District, {{Ethiopia}}},
