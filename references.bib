@article{graserLargescaleForestDisturbance2025,
  title = {Large-Scale Forest Disturbance and Associated Management Shape Bird Communities in {{Central European}} Spruce Forests},
  author = {Graser, Anne and Georg, Malte and Kallmayer, Josef and Marten, Andreas and Pertl, Caren and Rumpf, Hendrik and Senf, Cornelius and Kamp, Johannes},
