    issn = {1939-5582},
    journal = {Ecological Applications},
    keywords = {agricultural intensification,agroecosystems,dispersal,hierarchical modeling,human activity,landscape composition,medium- and large-sized mammals,species coexistence},
    langid = {english},
    number = {2},
