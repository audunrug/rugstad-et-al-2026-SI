}
@article{handegardHowImportantForest2024,
  title = {How Important Is {{Forest Age}} in Explaining the Species Composition of {{Near-natural Spruce Forests}}?},
  author = {Handegard, Eivind and Gjerde, Ivar and Halvorsen, Rune and Lewis, Robert and Storaunet, Ken Olaf and S{\ae}tersdal, Magne and Skarpaas, Olav},
  year = {2024},
  
  journal = {Forest Ecology and Management},
