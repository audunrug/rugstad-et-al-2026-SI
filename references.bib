  title = {Composition and {{Structure}} of {{Tugai Communities}} in the {{Indication}} of {{Ecological Conditions}} in the {{Lower Amu Dar}}'ya},
  author = {Korolyuk, A. Y. and Shomurodov, H. F. and Khabibullaev, B. S. and Sadinov, Z. S.},
